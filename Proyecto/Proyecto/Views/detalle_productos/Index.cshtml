@model IEnumerable<Proyecto.detalle_productos>

@{
    ViewBag.Title = "Index";
}

<h2>Detalle de Producto</h2>

<p>
    @Html.ActionLink("Agregar detalle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre de producto
        </th>
        <th>
            Existencia
        </th>
        <th>
            Precio de venta
        </th>
        <th>
           Precio de compra
        </th>
        <th>
            Descripcion
        </th>
        <th>
            Id de categoria
        </th>
        <th>
            Id de proveedor
        </th>
        <th>
            Usuario
        </th>
        <th>
            Nombre de producto
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_producto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Existencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio_venta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio_compra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.id_categoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.id_proveedor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pedido.Nombre_Usuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Productos.Nombre_producto)
        </td>
        <td>
            @Html.ActionLink("Editar Detalle", "Edit", new { id=item.id_detalle_producto }) |
            @Html.ActionLink("Detalle de Producto", "Details", new { id=item.id_detalle_producto }) |
            @Html.ActionLink("Eliminar Detalle", "Delete", new { id=item.id_detalle_producto })
        </td>
    </tr>
}

</table>
