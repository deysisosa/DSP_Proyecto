@model IEnumerable<Proyecto.Productos>

@{
    ViewBag.Title = "Index";
}

<h2>Productos</h2>

<p>
    @Html.ActionLink("agregar Producto", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Nombre de producto
        </th>
        <th>
            Existencias
        </th>
        <th>
            Precio de venta
        </th>
        <th>
            Precio de compra
        </th>
        <th>
            Descripcion
        </th>
        <th>
            Numero de pedido
        </th>
        <th>
            Nombre de Bodega
        </th>
        <th>
            Categoria
        </th>
        <th>
            Estado
        </th>
        <th>
            Proveedor
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre_producto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Existencias)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio_venta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Precio_compra)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.N_pedido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.bodega.Nombre_Bodega)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.Nombre_categoria)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado1.Estado1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Proveedores.Nombre_Proveedor)
        </td>
        <td>
            @Html.ActionLink("Editar Producto", "Edit", new { id=item.id_producto }) |
            @Html.ActionLink("Detalle del Producto", "Details", new { id=item.id_producto }) |
            @Html.ActionLink("Eliminar producto", "Delete", new { id=item.id_producto })
        </td>
    </tr>
}

</table>
